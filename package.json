{
  "name": "vite-typescript-ssr-react",
  "version": "1.0.1",
  "description": "Boilerplate for a modern web stack",
  "author": "Stefan Hilhorst",
  "license": "MIT",
  "scripts": {
    "dev:server": "nodemon src/index.ts",
    "dev:client": "npm run build:client && vite",
    "build": "rimraf dist && tsc && npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/views",
    "build:server": "vite build --ssr src/views/entry-server.tsx --outDir dist/views",
    "start": "npm run build && cross-env NODE_ENV=production node dist/index.js"
  },
  "dependencies": {
    "compression": "1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.1",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "@types/compression": "1.7.2",
    "@types/concurrently": "6.4.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/node": "18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^3.0.0",
    "concurrently": "7.6.0",
    "jsdom": "^20.0.3",
    "rimraf": "^3.0.2",
    "sass": "^1.59.2",
    "ts-node": "^10.9.1",
    "typescript": "4.9.4",
    "vite": "4.0.3"
  }
}
